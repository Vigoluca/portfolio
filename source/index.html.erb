<%# <div class="container "> %>
<%#= partial 'partials/banner' %>
<%# </div> %>
<!-- Home Section -->
<header class="section sec1 header active" id="home">
  <%= partial 'partials/home' %>
</header>
<!-- About Section -->
<section class="section sec2 about" id="about">
  <%= partial 'partials/about' %>
</section>
<!-- Projects Section -->
<section class="section sec3 portfolio" id="portfolio">
  <%= partial 'partials/projects' %>
</section>
<!-- Placeholder section -->
<section class="section sec4 blogs" id="blogs"></section>
<!-- Social Links Section -->
<section class="section sec5 contact" id="contact">
  <%= partial 'partials/social' %>
</section>
<!-- Buttons Section -->
<div class="controls">
  <div class="control control1 active-btn" data-id="home">
    <i class="fa-solid fa-house"></i>
  </div>
  <div class="control control2" data-id="about">
    <i class="fa-solid fa-user"></i>
  </div>
  <div class="control control3" data-id="portfolio">
    <i class="fa-solid fa-briefcase"></i>
  </div>
  <div class="control control5" data-id="contact">
    <i class="fa-solid fa-address-book"></i>
  </div>
</div>
<div class="dark-mode" onclick="changeIcon();">
  <i class="fa-solid fa-moon" id="change-mode"></i>
</div>
<%= javascript_include_tag "site" %>
